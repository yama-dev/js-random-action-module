{
  "name": "js-random-action-module",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm install && npm run develop",
    "develop": "npm-run-all -p build:babel server",
    "production": "npm-run-all -p build:babel:production",
    "build:babel": "babel src --watch --out-dir dist --presets env,babili --ignore **/_*.es6",
    "build:babel:production": "babel src --out-dir dist --presets env,babili",
    "server": "browser-sync start --server ./ --directory ./sample --files **/*.css **/*.js **/*.html"
  },
  "repository": {
    "type": "git",
    "url": "yama-dev"
  },
  "author": "yama-dev",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "npm-run-all": "^4.1.2"
  }
}
